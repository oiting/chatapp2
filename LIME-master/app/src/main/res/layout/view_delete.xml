<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeleteTime"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textColor="#949494" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/cbDelete" android:layout_marginRight="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeleteName" app:layout_constraintStart_toEndOf="@+id/imgDeleteAvatar"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imgDeleteAvatar" android:textColor="#111111"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/avatar"
            android:id="@+id/imgDeleteAvatar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeleteMessage" app:layout_constraintStart_toStartOf="@+id/tvDeleteName"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteName" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textColor="#949494" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/tvDeleteTime"
            android:layout_marginRight="24dp" app:autoSizeTextType="uniform"
            tools:text="111111111111111111111111111111111111111111"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbDelete" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>